<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Background color -->
    <solid android:color="#F9F9F9"/> <!-- light gray/white background -->

    <!-- Rounded corners -->
    <corners android:radius="12dp" />

    <!-- Border -->
    <stroke
        android:width="1dp"
        android:color="#DDDDDD" /> <!-- light border -->

    <!-- Padding inside the card -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />
</shape>
