<animated-vector
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:aapt="http://schemas.android.com/aapt">
    <aapt:attr name="android:drawable">
        <vector
            android:name="vector"
            android:width="100dp"
            android:height="100dp"
            android:viewportWidth="100"
            android:viewportHeight="100">
            
            <group
                android:name="circle_group"
                android:pivotX="50"
                android:pivotY="50">
                <path
                    android:name="circle"
                    android:pathData="M 50 50 m -48 0 a 48 48 0 1 1 96 0 a 48 48 0 1 1 -96 0"
                    android:fillColor="#2ECC71"/>
            </group>

            <path
                android:name="check"
                android:pathData="M 28 50 L 44 66 L 72 38"
                android:strokeColor="#FFFFFF"
                android:strokeWidth="8"
                android:strokeLineCap="round"
                android:strokeLineJoin="round"
                android:trimPathEnd="0"/>
        </vector>
    </aapt:attr>

    <target android:name="check">
        <aapt:attr name="android:animation">
            <objectAnimator
                android:propertyName="trimPathEnd"
                android:valueFrom="0"
                android:valueTo="1"
                android:duration="600"
                android:interpolator="@android:interpolator/fast_out_slow_in"/>
        </aapt:attr>
    </target>

    <target android:name="circle_group">
        <aapt:attr name="android:animation">
            <set>
                <objectAnimator
                    android:propertyName="scaleX"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:duration="400"
                    android:interpolator="@android:interpolator/overshoot"/>
                <objectAnimator
                    android:propertyName="scaleY"
                    android:valueFrom="0.2"
                    android:valueTo="1"
                    android:duration="400"
                    android:interpolator="@android:interpolator/overshoot"/>
            </set>
        </aapt:attr>
    </target>
</animated-vector>
