<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp"
    android:background="@android:color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Doctor Appointment"
            android:textSize="24sp"
            android:textStyle="bold"
            android:textColor="#2196F3"
            android:gravity="center"
            android:layout_marginBottom="24dp"/>

        <EditText
            android:id="@+id/etLocation"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginBottom="16dp"
            android:background="@drawable/edittext_background"
            android:hint="Enter your location (city, area)"
            android:padding="12dp"
            android:inputType="text" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Appointment Type"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <RadioGroup
            android:id="@+id/rgAppointmentType"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="16dp">

            <RadioButton
                android:id="@+id/rbOnline"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Online Consultation"
                android:padding="8dp"/>

            <RadioButton
                android:id="@+id/rbHospital"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Hospital Visit"
                android:padding="8dp"/>
        </RadioGroup>

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Describe Your Symptoms"
            android:textSize="16sp"
            android:textStyle="bold"
            android:layout_marginBottom="8dp"/>

        <EditText
            android:id="@+id/etSymptoms"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:padding="12dp"
            android:hint="Type your symptoms in detail (e.g., headache, fever, chest pain)"
            android:background="@drawable/edittext_background"
            android:inputType="textMultiLine"
            android:gravity="top"
            android:layout_marginBottom="24dp"/>

        <Button
            android:id="@+id/btnFindDoctor"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Find Doctors"
            android:textColor="#000000"
            android:textStyle="bold"
            android:background="@drawable/rounded_button"
            android:stateListAnimator="@null"
            android:textSize="18sp"
            android:padding="12dp"/>

    </LinearLayout>
</ScrollView>